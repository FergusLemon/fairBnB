{
  "name": "fairbnb",
  "version": "1.0.0",
  "description": "1. Any signed-up user can list a new space.\r 2. Users can list multiple spaces.\r 3. Users should be able to name their space, provide a short description of the space, and a price per night.\r 4. Users should be able to offer a range of dates where their space is available.\r 5. Any signed-up user can request to hire any space for one night, and this should be approved by the user that owns that space.\r 6. Nights for which a space has already been booked should not be available for users to book.\r 7. Until a user has confirmed a booking request, that space can still be booked for that night.",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "nyc": {
    "exclude": "./app_server/auth.js"
  },
  "scripts": {
    "start": "nodemon --exec babel-node bin/www",
    "test": "./node_modules/.bin/mocha --reporter spec ./test/*.js; ./node_modules/.bin/mocha --reporter spec ./test/routes/*/*.js",
    "featureTest": "testcafe chrome test/feature/* --app \"node bin/www\"",
    "jshint": "./node_modules/.bin/jshint",
    "coverage": "nyc npm run test",
    "coveralls": "npm run coverage -- --report lcovonly && cat ./coverage/lcov.info | coveralls"
  },
  "pre-commit": [
    "jshint",
    "coverage"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FergusLemon/fairBnB.git"
  },
  "author": "ferguslemon",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FergusLemon/fairBnB/issues"
  },
  "homepage": "https://github.com/FergusLemon/fairBnB#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.2",
    "istanbul": "^0.4.5",
    "jshint": "^2.9.7",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.9",
    "nyc": "^13.1.0",
    "pre-commit": "^1.2.2",
    "request": "^2.88.0",
    "sinon": "^7.2.2",
    "sinon-chai": "^3.3.0",
    "sinon-mongoose": "^2.2.1",
    "sinon-test": "^2.4.0",
    "testcafe": "^0.23.3"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "app-root-path": "^2.1.0",
    "bcrypt": "^3.0.3",
    "body-parser": "^1.18.3",
    "bootstrap-datepicker": "^1.8.0",
    "cloudinary": "^1.13.2",
    "connect-flash": "^0.1.1",
    "connect-redis": "^3.4.0",
    "cookie-parser": "^1.4.3",
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "jquery": "^3.3.1",
    "js-datepicker": "^4.0.10",
    "moment": "^2.24.0",
    "mongoose": "^5.4.1",
    "multer": "^1.4.1",
    "multer-storage-cloudinary": "^2.2.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pug": "^2.0.3",
    "redis": "^2.8.0",
    "validator": "^10.10.0",
    "winston": "^3.2.1"
  }
}
