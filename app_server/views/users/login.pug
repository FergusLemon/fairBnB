extends ../layout.pug
block header
  head
    link(rel="stylesheet", type="text/css", href="/stylesheets/index.css")

block nav
  nav
    a#sign-up(href="/users/new") Sign Up

block content
  form(action="/", method="POST")
    fieldset
      legend Welcome Back
      label(for="username") Username
      input#username(type="email", name="username")
      label(for="password") Password
      input#password(type="password", name="password")
      br
      button#sign-in(type="submit") Sign In
  if locals.message
    div(id="error-message")=message
